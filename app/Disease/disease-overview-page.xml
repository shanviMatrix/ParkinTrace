                <StackLayout class="stage-card stage-3">
                    <Label text="Stage 3 - Mid-stage" class="stage-title" />
                    <Label text="Loss of balance, falls become common, still independent" class="stage-desc" textWrap="true" />
                </StackLayout>

                <StackLayout class="stage-card stage-4">
                    <Label text="Stage 4 - Advanced" class="stage-title" />
